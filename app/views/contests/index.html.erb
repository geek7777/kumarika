<div class="row">
  <% @contests.each do |contest| %>
    <div class="col-sm-4 col-md-4 col-lg-4 col-xs-4" style="margin-bottom: 10px">
      <div class="card" style="width: 100%;">
        <%= image_tag(contest.image.url,:class=>"card-img-top", :size=>"120x260") %>
        <div class="card-body">
          <h5 class="card-title"><%= contest.name %></h5>
          <small>Created <%= time_ago_in_words(contest.created_at)%> ago</small>
          <br>
          <%= link_to "Click Here", contest ,:class=>"btn btn-success"%>
        </div>
      </div>
    </div>
    <% end %>
</div>
<br>
<div class="row" style="padding-bottom: 10px">
  <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
    <% if can? :create, @contest %>
      <%= link_to new_contest_path do %>
        <button type="button" class="btn btn-success btn-block">
          <div class="fa fa-plus"></div>
        </button>
      <% end %>
    <% end %>
  </div>
</div>